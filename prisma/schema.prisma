generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProjectType {
  frontend
  backend
  fullstack
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
}
model Project{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  live  String
  github  String
  description  String
  type        ProjectType
  isTrashed  Boolean @default(false)  
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt  

}